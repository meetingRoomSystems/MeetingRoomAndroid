        <EditText
            android:id="@+id/resultsView_capacity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:labelFor="@+id/textView_capacity"
            android:ems="10"
            android:inputType="number"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/multi_spinner"
            android:layout_marginTop="50dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/textView_capacity" />

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="67dp"
            android:layout_height="0dp"
            android:contentDescription="cancel"
            android:onClick="cancel"
            app:srcCompat="@android:drawable/ic_delete"
            app:layout_constraintRight_toLeftOf="@+id/submit"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="77dp"
            app:layout_constraintBottom_toBottomOf="@+id/submit"
            android:layout_marginEnd="78dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/submit" />

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="67dp"
            android:layout_height="72dp"
            app:srcCompat="@drawable/ic_submit"
            android:onClick="submit"
            android:contentDescription="submit"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="71dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration (in mins):"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_room"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:entries="@array/duration_arrays"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/textView" />

        <TextView
            android:id="@+id/textView_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag colleagues:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.compulynx.meetingroombooking.MultiSpinner
            android:id="@+id/multi_spinner"
            android:layout_height="wrap_content"
            android:layout_width="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/textView_others"
            tools:layout_editor_absoluteY="216dp"
            android:layout_marginLeft="16dp" />
    </android.support.constraint.ConstraintLayout>





</android.support.constraint.ConstraintLayout>
