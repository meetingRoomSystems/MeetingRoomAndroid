        <!--<TextView-->
            <!--android:id="@+id/resultsView_By"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"-->
